<workflow-app xmlns="uri:oozie:workflow:0.1" name="fork-workflow">
	<start to="fork" />

	<fork name="fork">
		<path start="noaaMonterrey"/>
		<path start="ncdc"/>
	</fork>

	<action name="noaaMonterrey">
		<map-reduce>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<prepare>
				<delete path="${nameNode}/fork/out1"/>
			</prepare>
			<configuration>
				<property>
				  <name>mapred.mapper.class</name>
				  <value>NoaaMonterrey$NoaaMapper</value>
				</property>
				<property>
				  <name>mapred.reducer.class</name>
				  <value>NoaaMonterrey$NoaaReducer</value>
				</property>
				<property>
				  <name>mapred.output.key.class</name>
				  <value>org.apache.hadoop.io.Text</value>
				</property>
				<property>
				  <name>mapred.output.value.class</name>
				  <value>org.apache.hadoop.io.Text</value>
				</property>        
				<property>
				  <name>mapred.input.dir</name>
				  <value>/fork/in1/Monterrey</value>
				</property>
				<property>
				  <name>mapred.output.dir</name>
				  <value>/fork/out1</value>
				</property>
			</configuration>

		</map-reduce>
		<ok to="join"/>
		<error to="fail"/>
	</action>

	<action name="ncdc">
		<map-reduce>
      <job-tracker>${jobTracker}</job-tracker>
      <name-node>${nameNode}</name-node>
      <prepare>
        <delete path="${nameNode}/fork/out2"/>
      </prepare>
      <configuration>
        <property>
          <name>mapred.mapper.class</name>
          <value>Ncdc$NcdcMapper</value>
        </property>
        <property>
          <name>mapred.reducer.class</name>
          <value>Ncdc$NcdcReducer</value>
        </property>
        <property>
          <name>mapred.output.key.class</name>
          <value>org.apache.hadoop.io.Text</value>
        </property>
        <property>
          <name>mapred.output.value.class</name>
          <value>org.apache.hadoop.io.Text</value>
        </property>        
        <property>
          <name>mapred.input.dir</name>
          <value>/fork/in2</value>
        </property>
        <property>
          <name>mapred.output.dir</name>
          <value>/fork/out2</value>
        </property>
      </configuration>
    </map-reduce>
    <ok to="join"/>
		<error to="fail"/>
	</action>

	<join name="join" to="fill"/>

	<action name="fill">
		<map-reduce>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<prepare>
				<delete path="${nameNode}/fork/out2"/>
			</prepare>
		<configuration>
			<property>
				<name>mapred.mapper.class</name>
				<value>Fill$FillMapper</value>
			</property>
			<property>
				<name>mapred.reducer.class</name>
				<value>Fill$FillReducer</value>
			</property>
			<property>
				<name>mapred.output.key.class</name>
				<value>org.apache.hadoop.io.Text</value>
			</property>
			<property>
				<name>mapred.output.value.class</name>
				<value>org.apache.hadoop.io.Text</value>
			</property>
			<property>
				<name>mapred.input.dir</name>
				<value>/fork/out1/part-00000,/fork/out2/part-00000</value>
			</property>
			<property>
				<name>mapred.output.dir</name>
				<value>/fork/out3</value>
			</property>
		</configuration>
	</map-reduce>
    <ok to="end"/>
    <error to="fail"/>
  </action>
	

  <kill name="fail">
    <message>MapReduce failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
  </kill>
  <end name="end"/>
</workflow-app>
